extends layout

block content
    h1= title
    button.btn.btn-primary(onClick=`dispatch(\"/Apple/create\")`) Create Vehicle
    - let items = results;
    div(class="container-fluid")
        div(class="row m-1")
            each item in items
                - let destination = `dispatch(\"/Apple/update?id=${item._id}\")`
                - let details = `dispatch(\"/Apple/detail?id=${item._id}\")`
                - let deleteItem = `dispatch(\"/Apple/delete?id=${item._id}\")`
                div(class="row-sm-2", class="m-1") 
                    p Apple Name: #{item.name}
                    p Apple color: #{item.color}
                    p Apple Price: #{item.price}
                    div(class="row")
                        button.btn( class="btn-primary m1-2", onclick= destination) Update
                        button.btn( class="btn-info m1-2", onclick= details) View Details
                        button.btn( class="btn-danger m1-2", onclick= deleteItem) Delete
    
    script.
        function dispatch(path){
            window.location.href=path
        }
